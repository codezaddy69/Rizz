<Window x:Class="DJMixMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DJMixMaster"
        xmlns:visualization="clr-namespace:DJMixMaster.Visualization"
        mc:Ignorable="d"
        Title="DJ Mix Master" Height="900" Width="1600"
        WindowState="Maximized"
        Background="#FF121212">
    
    <Window.Resources>
        <!-- Style for neon buttons -->
        <Style x:Key="NeonButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Grid.Resources>
                                <DropShadowEffect x:Key="ButtonGlow" 
                                                Color="{Binding BorderBrush.Color, RelativeSource={RelativeSource TemplatedParent}}"
                                                BlurRadius="10" 
                                                ShadowDepth="0"/>
                            </Grid.Resources>
                            <Border x:Name="ButtonBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5"
                                    Effect="{StaticResource ButtonGlow}"/>
                            <ContentPresenter x:Name="ButtonContent"
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{Binding BorderBrush.Color, RelativeSource={RelativeSource TemplatedParent}}" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="{Binding BorderBrush.Color, RelativeSource={RelativeSource TemplatedParent}}"
                                                        BlurRadius="15" 
                                                        ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{Binding BorderBrush.Color, RelativeSource={RelativeSource TemplatedParent}}" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="{Binding BorderBrush.Color, RelativeSource={RelativeSource TemplatedParent}}"
                                                        BlurRadius="25" 
                                                        ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for vertical volume sliders -->
        <Style x:Key="NeonVerticalSlider" TargetType="Slider">
            <Setter Property="Background" Value="#FF252525"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="2"
                                    CornerRadius="5">
                                <Border.Effect>
                                    <DropShadowEffect x:Name="GlowEffect" BlurRadius="10" ShadowDepth="0"/>
                                </Border.Effect>
                                <!-- Center Line -->
                                <Rectangle Width="2" Height="30" 
                                         Fill="{TemplateBinding BorderBrush}"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center">
                                    <Rectangle.Effect>
                                        <DropShadowEffect Color="{Binding BorderBrush.Color, RelativeSource={RelativeSource TemplatedParent}}" 
                                                        BlurRadius="10" ShadowDepth="0"/>
                                    </Rectangle.Effect>
                                </Rectangle>
                            </Border>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Border Width="20" Height="30" 
                                                        Background="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=Slider}}"
                                                        CornerRadius="3">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="{Binding BorderBrush.Color, RelativeSource={RelativeSource AncestorType=Slider}}" 
                                                                        BlurRadius="15" ShadowDepth="0"/>
                                                    </Border.Effect>
                                                </Border>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="GlowEffect" 
                                                           Storyboard.TargetProperty="BlurRadius"
                                                           To="25" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="GlowEffect" 
                                                           Storyboard.TargetProperty="BlurRadius"
                                                           To="10" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for crossfader -->
        <Style x:Key="NeonCrossfader" TargetType="Slider">
            <Setter Property="Background" Value="#FF252525"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="2"
                                    CornerRadius="5">
                                <Border.Effect>
                                    <DropShadowEffect x:Name="GlowEffect" BlurRadius="10" ShadowDepth="0"/>
                                </Border.Effect>
                                <!-- Center Line -->
                                <Rectangle Height="2" Width="30" 
                                         Fill="{TemplateBinding BorderBrush}"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center">
                                    <Rectangle.Effect>
                                        <DropShadowEffect Color="{Binding BorderBrush.Color, RelativeSource={RelativeSource TemplatedParent}}" 
                                                        BlurRadius="10" ShadowDepth="0"/>
                                    </Rectangle.Effect>
                                </Rectangle>
                            </Border>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Border Width="40" Height="20" 
                                                        Background="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=Slider}}"
                                                        CornerRadius="3">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="{Binding BorderBrush.Color, RelativeSource={RelativeSource AncestorType=Slider}}" 
                                                                        BlurRadius="15" ShadowDepth="0"/>
                                                    </Border.Effect>
                                                </Border>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="GlowEffect" 
                                                           Storyboard.TargetProperty="BlurRadius"
                                                           To="25" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="GlowEffect" 
                                                           Storyboard.TargetProperty="BlurRadius"
                                                           To="10" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3.5*"/> <!-- Deck Section (more space for waveforms) -->
            <RowDefinition Height="2*"/> <!-- Mixer Section (enough for 3 rows of buttons) -->
            <RowDefinition Height="4.5*"/> <!-- Playlist Section -->
        </Grid.RowDefinitions>

        <!-- Deck Area -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Deck -->
            <Border Grid.Column="0" Margin="10" Background="#FF1A1A1A" CornerRadius="10">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="6*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Album Art Canvas -->
                    <Border Grid.Column="0" Background="#FF252525" CornerRadius="200" Margin="20">
                        <Canvas x:Name="LeftDeckCanvas" ClipToBounds="True">
                            <Border Width="250" Height="250" CornerRadius="125" BorderBrush="#9D00FF" BorderThickness="3">
                                <Border.Effect>
                                    <DropShadowEffect x:Name="LeftDeckGlow" Color="#9D00FF" BlurRadius="20" ShadowDepth="0"/>
                                </Border.Effect>
                            </Border>
                        </Canvas>
                    </Border>

                    <!-- Track Info -->
                    <Grid Grid.Column="1" Margin="10,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Track Info -->
                        <StackPanel Grid.Row="0">
                            <TextBlock x:Name="leftTrackTitle" Text="No Track Loaded" FontSize="24" Foreground="#00F7FF" FontWeight="Bold"/>
                            <TextBlock x:Name="leftTrackInfo" Text="" FontSize="18" Foreground="#CCCCCC"/>
                        </StackPanel>

                         <!-- Waveform -->
                         <Border Grid.Row="1" Background="#FF252525" CornerRadius="5" Margin="0,10">
                             <visualization:WaveformVisualizer x:Name="leftWaveform"/>
                         </Border>

                         <!-- Position Slider -->
                         <Slider x:Name="deck1PositionSlider"
                                 Grid.Row="2"
                                 Margin="0,5"
                                 Minimum="0"
                                 Maximum="0"
                                 Value="0"
                                 BorderBrush="#9D00FF"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Right Deck -->
            <Border Grid.Column="1" Margin="10" Background="#FF1A1A1A" CornerRadius="10">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>

                     <!-- Track Info -->
                     <Grid Grid.Column="0" Margin="0,0,10,0">
                         <Grid.RowDefinitions>
                             <RowDefinition Height="Auto"/>
                             <RowDefinition Height="*"/>
                             <RowDefinition Height="Auto"/>
                         </Grid.RowDefinitions>

                        <!-- Track Info -->
                        <StackPanel Grid.Row="0">
                            <TextBlock x:Name="rightTrackTitle" Text="No Track Loaded" FontSize="24" Foreground="#39FF14" FontWeight="Bold"/>
                            <TextBlock x:Name="rightTrackInfo" Text="" FontSize="18" Foreground="#CCCCCC"/>
                        </StackPanel>

                         <!-- Waveform -->
                         <Border Grid.Row="1" Background="#FF252525" CornerRadius="5" Margin="0,10">
                             <visualization:WaveformVisualizer x:Name="rightWaveform"/>
                         </Border>

                         <!-- Position Slider -->
                         <Slider x:Name="deck2PositionSlider"
                                 Grid.Row="2"
                                 Margin="0,5"
                                 Minimum="0"
                                 Maximum="0"
                                 Value="0"
                                 BorderBrush="#39FF14"/>
                     </Grid>

                    <!-- Album Art Canvas -->
                    <Border Grid.Column="1" Background="#FF252525" CornerRadius="200" Margin="20">
                        <Canvas x:Name="RightDeckCanvas" ClipToBounds="True">
                            <Border Width="250" Height="250" CornerRadius="125" BorderBrush="#39FF14" BorderThickness="3">
                                <Border.Effect>
                                    <DropShadowEffect x:Name="RightDeckGlow" Color="#39FF14" BlurRadius="20" ShadowDepth="0"/>
                                </Border.Effect>
                            </Border>
                        </Canvas>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Mixer Controls -->
        <Grid Grid.Row="1" Background="#FF1A1A1A">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/> <!-- Space for deck controls -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/> <!-- Space for deck controls -->
            </Grid.ColumnDefinitions>

            <!-- Left Deck Controls -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Transport Controls + Load Row -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button x:Name="btnLeftRew" Content="REW" Style="{StaticResource NeonButton}" BorderBrush="#9D00FF" Margin="5,0"/>
                    <Button x:Name="btnLeftPlay" Content="PLAY" Style="{StaticResource NeonButton}" BorderBrush="#9D00FF" Margin="5,0"/>
                    <Button x:Name="btnLeftFF" Content="FF" Style="{StaticResource NeonButton}" BorderBrush="#9D00FF" Margin="5,0"/>
                     <Button x:Name="btnLeftLoad" Content="LOAD" Style="{StaticResource NeonButton}" BorderBrush="#9D00FF" Margin="5,0"/>
                     <Button x:Name="btnLeftTest" Content="TEST" Style="{StaticResource NeonButton}" BorderBrush="#9D00FF" Margin="5,0"/>
                 </StackPanel>

                <!-- Hot Cue Row -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button x:Name="btnLeftCue1" Content="CUE 1" Style="{StaticResource NeonButton}" BorderBrush="#FF00E4" Margin="5,0"/>
                    <Button x:Name="btnLeftCue2" Content="CUE 2" Style="{StaticResource NeonButton}" BorderBrush="#FF00E4" Margin="5,0"/>
                    <Button x:Name="btnLeftCue3" Content="CUE 3" Style="{StaticResource NeonButton}" BorderBrush="#FF00E4" Margin="5,0"/>
                </StackPanel>

                <!-- FX Row -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="FX 1" Style="{StaticResource NeonButton}" BorderBrush="#00F7FF" Margin="5,0"/>
                    <Button Content="FX 2" Style="{StaticResource NeonButton}" BorderBrush="#00F7FF" Margin="5,0"/>
                    <Button Content="FX 3" Style="{StaticResource NeonButton}" BorderBrush="#00F7FF" Margin="5,0"/>
                </StackPanel>
            </Grid>

            <!-- Left Volume -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <Slider x:Name="sliderLeftVolume"
                        Style="{StaticResource NeonVerticalSlider}"
                        Orientation="Vertical"
                        Margin="40,10"
                        Height="120"
                        Minimum="0"
                        Maximum="1"
                        Value="1"
                        BorderBrush="#9D00FF"/>
                <TextBlock x:Name="textLeftVolume"
                           Text="100%"
                           Foreground="#00F7FF"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,5"/>
            </StackPanel>

             <!-- Crossfader -->
              <StackPanel Grid.Column="2" VerticalAlignment="Center">
                  <Slider x:Name="sliderCrossfader"
                          Style="{StaticResource NeonCrossfader}"
                          Margin="40,20"
                          Height="30"
                          Minimum="-1"
                          Maximum="1"
                          Value="0"
                          BorderBrush="#00F7FF"/>
                  <Button x:Name="btnSettings" Content="âš™" Style="{StaticResource NeonButton}"
                          BorderBrush="#FFFF00" Margin="40,5" Width="50" Height="40"
                          ToolTip="Audio Settings"/>
              </StackPanel>

            <!-- Right Volume -->
            <StackPanel Grid.Column="3" VerticalAlignment="Center">
                <Slider x:Name="sliderRightVolume"
                        Style="{StaticResource NeonVerticalSlider}"
                        Orientation="Vertical"
                        Margin="40,10"
                        Height="120"
                        Minimum="0"
                        Maximum="1"
                        Value="1"
                        BorderBrush="#39FF14"/>
                <TextBlock x:Name="textRightVolume"
                           Text="100%"
                           Foreground="#39FF14"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,5"/>
            </StackPanel>

            <!-- Right Deck Controls -->
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Transport Controls + Load Row -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button x:Name="btnRightRew" Content="REW" Style="{StaticResource NeonButton}" BorderBrush="#39FF14" Margin="5,0"/>
                    <Button x:Name="btnRightPlay" Content="PLAY" Style="{StaticResource NeonButton}" BorderBrush="#39FF14" Margin="5,0"/>
                    <Button x:Name="btnRightFF" Content="FF" Style="{StaticResource NeonButton}" BorderBrush="#39FF14" Margin="5,0"/>
                     <Button x:Name="btnRightLoad" Content="LOAD" Style="{StaticResource NeonButton}" BorderBrush="#39FF14" Margin="5,0"/>
                     <Button x:Name="btnRightTest" Content="TEST" Style="{StaticResource NeonButton}" BorderBrush="#39FF14" Margin="5,0"/>
                  </StackPanel>

                <!-- Hot Cue Row -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button x:Name="btnRightCue1" Content="CUE 1" Style="{StaticResource NeonButton}" BorderBrush="#FF00E4" Margin="5,0"/>
                    <Button x:Name="btnRightCue2" Content="CUE 2" Style="{StaticResource NeonButton}" BorderBrush="#FF00E4" Margin="5,0"/>
                    <Button x:Name="btnRightCue3" Content="CUE 3" Style="{StaticResource NeonButton}" BorderBrush="#FF00E4" Margin="5,0"/>
                </StackPanel>

                <!-- FX Row -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="FX 1" Style="{StaticResource NeonButton}" BorderBrush="#00F7FF" Margin="5,0"/>
                    <Button Content="FX 2" Style="{StaticResource NeonButton}" BorderBrush="#00F7FF" Margin="5,0"/>
                    <Button Content="FX 3" Style="{StaticResource NeonButton}" BorderBrush="#00F7FF" Margin="5,0"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Playlist Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <!-- Folder Navigation -->
            <Border Grid.Column="0" Background="#FF1A1A1A" Margin="10" CornerRadius="10">
                <TreeView Background="Transparent" Foreground="White"/>
            </Border>

            <!-- Playlist -->
            <Border Grid.Column="1" Background="#FF1A1A1A" Margin="10" CornerRadius="10">
                <ListView Background="Transparent" Foreground="White">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Track" Width="200"/>
                            <GridViewColumn Header="Artist" Width="150"/>
                            <GridViewColumn Header="Duration" Width="100"/>
                            <GridViewColumn Header="BPM" Width="80"/>
                            <GridViewColumn Header="Key" Width="80"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
        </Grid>
    </Grid>
</Window>
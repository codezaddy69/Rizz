<Window x:Class="DJMixMaster.Audio.AudioSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DJMixMaster.Audio"
        mc:Ignorable="d"
        Title="Audio Settings" Height="600" Width="700"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="#1a1a1a" Foreground="#ffffff"
        FontFamily="Segoe UI" FontSize="12">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#00ffff"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#00ffff"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#404040"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#404040"/>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#404040"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#00ffff"/>
                    <Setter Property="Foreground" Value="#000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        <Style TargetType="Slider">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="BorderBrush" Value="#404040"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2d2d2d"/>
            <Setter Property="Foreground" Value="#00ffff"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#404040"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <!-- Device Selection -->
                <GroupBox Header="Device Selection">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0">ASIO Device:</Label>
                        <ComboBox x:Name="DeviceComboBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"
                                SelectionChanged="DeviceComboBox_SelectionChanged"/>

                        <Label Grid.Row="1" Grid.Column="0">Buffer Size:</Label>
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                            <Slider x:Name="BufferSizeSlider" Width="200" Minimum="64" Maximum="2048" Value="512"
                                  ValueChanged="BufferSizeSlider_ValueChanged"/>
                            <TextBox x:Name="BufferSizeTextBox" Width="60" Margin="10,0,0,0" Text="512"/>
                            <TextBlock Margin="5,0" VerticalAlignment="Center" Foreground="#cccccc">samples</TextBlock>
                        </StackPanel>

                        <Label Grid.Row="2" Grid.Column="0">Sample Rate:</Label>
                        <ComboBox x:Name="SampleRateComboBox" Grid.Row="2" Grid.Column="1">
                            <ComboBoxItem>44100</ComboBoxItem>
                            <ComboBoxItem>48000</ComboBoxItem>
                            <ComboBoxItem IsSelected="True">44100</ComboBoxItem>
                        </ComboBox>

                        <Label Grid.Row="3" Grid.Column="0">Output Device:</Label>
                        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                            <ComboBox x:Name="OutputDeviceComboBox" Width="300" Margin="0,0,10,0"/>
                            <Button x:Name="ApplyDeviceButton" Content="Apply" Width="60"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Crossfader -->
                <GroupBox Header="Crossfader">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0">Curve:</Label>
                        <ComboBox x:Name="CrossfaderCurveComboBox" Grid.Row="0" Grid.Column="1">
                            <ComboBoxItem>Linear</ComboBoxItem>
                            <ComboBoxItem>Exponential</ComboBoxItem>
                            <ComboBoxItem>Logarithmic</ComboBoxItem>
                            <ComboBoxItem>S-Curve</ComboBoxItem>
                        </ComboBox>

                        <Label Grid.Row="1" Grid.Column="0">Range:</Label>
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                            <Slider x:Name="CrossfaderRangeSlider" Width="200" Minimum="0.5" Maximum="2.0" Value="1.0"
                                  ValueChanged="CrossfaderRangeSlider_ValueChanged"/>
                            <TextBox x:Name="CrossfaderRangeTextBox" Width="60" Margin="10,0,0,0" Text="100"/>
                            <TextBlock Margin="5,0" VerticalAlignment="Center" Foreground="#cccccc">%</TextBlock>
                        </StackPanel>

                        <Label Grid.Row="2" Grid.Column="0">Sensitivity:</Label>
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                            <Slider x:Name="CrossfaderSensitivitySlider" Width="200" Minimum="0.1" Maximum="2.0" Value="1.0"
                                  ValueChanged="CrossfaderSensitivitySlider_ValueChanged"/>
                            <TextBox x:Name="CrossfaderSensitivityTextBox" Width="60" Margin="10,0,0,0" Text="100"/>
                            <TextBlock Margin="5,0" VerticalAlignment="Center" Foreground="#cccccc">%</TextBlock>
                        </StackPanel>

                        <Label Grid.Row="3" Grid.Column="0">Mode:</Label>
                        <ComboBox x:Name="CrossfaderModeComboBox" Grid.Row="3" Grid.Column="1">
                            <ComboBoxItem>Additive</ComboBoxItem>
                            <ComboBoxItem>Cut-Only</ComboBoxItem>
                            <ComboBoxItem>Boost-Cut</ComboBoxItem>
                        </ComboBox>

                        <CheckBox x:Name="CenterDetentCheckBox" Grid.Row="4" Grid.Column="1"
                                Content="Center Detent" Margin="0,5"/>
                    </Grid>
                </GroupBox>

                <!-- Output Routing -->
                <GroupBox Header="Output Routing">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0">Master Output:</Label>
                        <ComboBox x:Name="MasterOutputComboBox" Grid.Row="0" Grid.Column="1">
                            <ComboBoxItem>Stereo Mix</ComboBoxItem>
                            <ComboBoxItem>Deck 1 Only</ComboBoxItem>
                            <ComboBoxItem>Deck 2 Only</ComboBoxItem>
                            <ComboBoxItem>Split</ComboBoxItem>
                        </ComboBox>

                        <Label Grid.Row="1" Grid.Column="0">Cue Output:</Label>
                        <ComboBox x:Name="CueOutputComboBox" Grid.Row="1" Grid.Column="1">
                            <ComboBoxItem>Deck 1</ComboBoxItem>
                            <ComboBoxItem>Deck 2</ComboBoxItem>
                            <ComboBoxItem>Master</ComboBoxItem>
                            <ComboBoxItem>Disabled</ComboBoxItem>
                        </ComboBox>

                        <Label Grid.Row="2" Grid.Column="0">Booth Output:</Label>
                        <ComboBox x:Name="BoothOutputComboBox" Grid.Row="2" Grid.Column="1">
                            <ComboBoxItem>Master</ComboBoxItem>
                            <ComboBoxItem>Cue</ComboBoxItem>
                            <ComboBoxItem>Disabled</ComboBoxItem>
                        </ComboBox>

                        <Label Grid.Row="3" Grid.Column="0">Master Level:</Label>
                        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                            <Slider x:Name="MasterLevelSlider" Width="200" Minimum="-60" Maximum="12" Value="0"
                                  ValueChanged="MasterLevelSlider_ValueChanged"/>
                            <TextBox x:Name="MasterLevelTextBox" Width="60" Margin="10,0,0,0" Text="0.0"/>
                            <TextBlock Margin="5,0" VerticalAlignment="Center" Foreground="#cccccc">dB</TextBlock>
                        </StackPanel>

                        <Label Grid.Row="4" Grid.Column="0">Headphone Mix:</Label>
                        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
                            <Slider x:Name="HeadphoneMixSlider" Width="200" Minimum="0" Maximum="1" Value="0.5"
                                  ValueChanged="HeadphoneMixSlider_ValueChanged"/>
                            <TextBox x:Name="HeadphoneMixTextBox" Width="60" Margin="10,0,0,0" Text="50"/>
                            <TextBlock Margin="5,0" VerticalAlignment="Center" Foreground="#cccccc">%</TextBlock>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Audio Processing -->
                <GroupBox Header="Audio Processing">
                    <StackPanel Margin="5">
                        <CheckBox x:Name="AlwaysResampleCheckBox" Content="Always Resample 44.1â†”48 kHz"/>
                        <CheckBox x:Name="HardwareBufferCheckBox" Content="Hardware Buffer (WavePCI)"/>
                        <CheckBox x:Name="AllowPullModeCheckBox" Content="Allow Pull Mode (WaveRT)"/>
                        <CheckBox x:Name="Force16BitCheckBox" Content="Force WDM Driver to 16 Bit"/>
                    </StackPanel>
                </GroupBox>

                <!-- File & Playback -->
                <GroupBox Header="File &amp; Playback">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox x:Name="AutoLoadCuesCheckBox" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                Content="Auto-Load Cue Points"/>
                        <CheckBox x:Name="RememberPositionCheckBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                Content="Remember Last Position"/>
                        <CheckBox x:Name="GaplessPlaybackCheckBox" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                Content="Gapless Playback"/>

                        <Label Grid.Row="3" Grid.Column="0">Pre-Buffer Time:</Label>
                        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                            <Slider x:Name="PreBufferSlider" Width="150" Minimum="0" Maximum="10" Value="2"/>
                            <TextBox x:Name="PreBufferTextBox" Width="60" Margin="10,0,0,0" Text="2.0"/>
                            <TextBlock Margin="5,0" VerticalAlignment="Center" Foreground="#cccccc">sec</TextBlock>
                        </StackPanel>

                        <Label Grid.Row="4" Grid.Column="0">Max File Size:</Label>
                        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
                            <Slider x:Name="MaxFileSizeSlider" Width="150" Minimum="10" Maximum="2000" Value="500"/>
                            <TextBox x:Name="MaxFileSizeTextBox" Width="60" Margin="10,0,0,0" Text="500"/>
                            <TextBlock Margin="5,0" VerticalAlignment="Center" Foreground="#cccccc">MB</TextBlock>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Interface -->
                <GroupBox Header="Interface">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0">Theme:</Label>
                        <ComboBox x:Name="ThemeComboBox" Grid.Row="0" Grid.Column="1">
                            <ComboBoxItem>Dark Neon</ComboBoxItem>
                            <ComboBoxItem>Light</ComboBoxItem>
                            <ComboBoxItem>Classic</ComboBoxItem>
                        </ComboBox>

                        <Label Grid.Row="1" Grid.Column="0">Waveform Zoom:</Label>
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                            <Slider x:Name="WaveformZoomSlider" Width="150" Minimum="0.5" Maximum="2.0" Value="1.0"/>
                            <TextBox x:Name="WaveformZoomTextBox" Width="60" Margin="10,0,0,0" Text="100"/>
                            <TextBlock Margin="5,0" VerticalAlignment="Center" Foreground="#cccccc">%</TextBlock>
                        </StackPanel>

                        <CheckBox x:Name="AutoScrollWaveformCheckBox" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                Content="Auto-Scroll Waveform"/>

                        <Label Grid.Row="3" Grid.Column="0">Keyboard Layout:</Label>
                        <ComboBox x:Name="KeyboardLayoutComboBox" Grid.Row="3" Grid.Column="1">
                            <ComboBoxItem>Standard</ComboBoxItem>
                            <ComboBoxItem>Traktor</ComboBoxItem>
                            <ComboBoxItem>Serato</ComboBoxItem>
                            <ComboBoxItem>Custom</ComboBoxItem>
                        </ComboBox>

                        <CheckBox x:Name="ConfirmDeleteCheckBox" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                Content="Confirm on Delete"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Status and Buttons -->
        <Border Grid.Row="1" BorderBrush="#404040" BorderThickness="0,1,0,0" Background="#2d2d2d">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusTextBlock" VerticalAlignment="Center"
                         Foreground="#cccccc" Text="Ready"/>

                <Button x:Name="ApplyButton" Grid.Column="1" Content="Apply"
                       Click="ApplyButton_Click"/>
                <Button x:Name="RevertButton" Grid.Column="2" Content="Revert to Defaults"
                       Click="RevertButton_Click"/>
                <Button x:Name="CloseButton" Grid.Column="3" Content="Close"
                       Click="CloseButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>